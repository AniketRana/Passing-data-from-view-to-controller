@model PassDataViewToController.Models.emp

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h2> pass data using parameters </h2>

        @using (Html.BeginForm("PostUsingParameters", "Home"))
        {
            <input type="text" name="Fname" /> <br />
            <input type="text" name="Lname" /> <br />
            <input type="submit" value="click me" />
        }
    </div>

    <hr>
    <div>
        <h2> pass data using request </h2>

        @using (Html.BeginForm("PostUsingRequest", "Home"))
        {
            <input type="text" name="Fname" /> <br />
            <input type="text" name="Lname" /> <br />
            <input type="submit" value="click me" />
        }
    </div>
    <hr>
    <div>
        <h2> pass data using form collection </h2>

        @using (Html.BeginForm("PostUsingFormCollection", "Home"))
        {
            <input type="text" name="Fname" /> <br />
            <input type="text" name="Lname" /> <br />
            <input type="submit" value="click me" />
        }
    </div>
